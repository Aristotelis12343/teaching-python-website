<%- include('partials/header') %>
<link rel="stylesheet" href="styles/enter_course.css"/>

<div class="landing-container">
  <div class="landing-card">
    <h1>Welcome, <%= displayName %>!</h1>
    <p class="subtitle">Ready to start your coding journey?</p>
    <button class="btn-start" id="start-button">Start Learning</button>
  </div>
</div>

<script>
  document.getElementById('start-button').addEventListener('click', () => {
    const name = encodeURIComponent('<%= displayName %>');
    window.location.href = `/lessonPage?moduleId=1&label=Welcome&displayName=${name}`;
  });
</script>

